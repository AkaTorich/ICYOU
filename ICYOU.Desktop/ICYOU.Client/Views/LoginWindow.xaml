<Window x:Class="ICYOU.Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ICYOU - Вход" 
        Height="600" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Border Background="{StaticResource SurfaceBrush}" 
                CornerRadius="16" 
                Margin="30"
                Padding="30">
            <StackPanel VerticalAlignment="Center">
                <!-- Логотип -->
                <TextBlock Text="ICYOU" 
                           FontSize="36" 
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Мессенджер" 
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <!-- Сервер -->
                <TextBlock Text="Сервер" Style="{StaticResource LabelStyle}"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ServerHost" 
                             Text="5.11.83.122" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,5,0"/>
                    <TextBox x:Name="ServerPort" 
                             Text="7777" 
                             Grid.Column="1"
                             Style="{StaticResource ModernTextBox}"/>
                </Grid>
                
                <!-- Имя пользователя -->
                <TextBlock Text="Имя пользователя" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="Username" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,15"/>
                
                <!-- Пароль -->
                <TextBlock Text="Пароль" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="Password" 
                             Style="{StaticResource ModernPasswordBox}"
                             Margin="0,0,0,20"/>
                
                <!-- Ошибка -->
                <TextBlock x:Name="ErrorText" 
                           Foreground="{StaticResource ErrorBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"
                           Visibility="Collapsed"/>
                
                <!-- Кнопки -->
                <Button x:Name="LoginButton" 
                        Content="Войти" 
                        Style="{StaticResource PrimaryButton}"
                        Click="LoginButton_Click"
                        Margin="0,0,0,10"/>
                
                <Button x:Name="RegisterButton" 
                        Content="Создать аккаунт" 
                        Style="{StaticResource SecondaryButton}"
                        Click="RegisterButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

