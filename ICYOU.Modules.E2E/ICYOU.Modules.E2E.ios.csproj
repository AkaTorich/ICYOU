<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0-ios17.2</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<!-- Для любых TFM, где GetTargetPlatformIdentifier вернёт 'ios' -->
		<TargetPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">17.2</TargetPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">17.2</SupportedOSPlatformVersion>
	</PropertyGroup>

	<ItemGroup>
		<!-- Ссылка на общую кросс‑платформенную библиотеку -->
		<ProjectReference Include="..\ICYOU.SDK\ICYOU.SDK.csproj" />
	</ItemGroup>

</Project>
