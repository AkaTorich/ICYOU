<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICYOU.Mobile.Pages.SettingsPage"
             Title="Настройки">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Error/Status Text -->
            <Label x:Name="StatusText"
                   TextColor="Red"
                   IsVisible="False"
                   FontSize="14" />

            <!-- User Info Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Профиль" FontSize="18" FontAttributes="Bold" />

                    <Label x:Name="UsernameLabel" FontSize="14" />
                    <Label x:Name="DisplayNameLabel" FontSize="14" />
                    <Label x:Name="UserIdLabel" FontSize="12" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Notifications Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Уведомления" FontSize="18" FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Сообщения" VerticalOptions="Center" />
                        <Switch x:Name="NotifyMessagesSwitch" Grid.Column="1" Toggled="OnNotifyMessagesToggled" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Звуки" VerticalOptions="Center" />
                        <Switch x:Name="NotifySoundsSwitch" Grid.Column="1" Toggled="OnNotifySoundsToggled" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Друзья" VerticalOptions="Center" />
                        <Switch x:Name="NotifyFriendsSwitch" Grid.Column="1" Toggled="OnNotifyFriendsToggled" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Emote Pack Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Пак смайлов" FontSize="18" FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Выбрать пак:" VerticalOptions="Center" />
                        <Picker x:Name="EmotePackPicker"
                                Grid.Column="1"
                                SelectedIndexChanged="OnEmotePackChanged"
                                WidthRequest="150"
                                VerticalOptions="Center" />
                    </Grid>

                    <Label x:Name="EmotePackInfoLabel"
                           FontSize="12"
                           TextColor="Gray"
                           Text="Паки находятся в папке emotes/" />
                </VerticalStackLayout>
            </Frame>

            <!-- Modules Section -->
            <Frame BorderColor="LightGray" Padding="15" x:Name="ModulesFrame">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Модули" FontSize="18" FontAttributes="Bold" />

                    <CollectionView x:Name="ModulesCollectionView" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Spacing="8" Padding="0,10,0,10">
                                    <!-- Module Info -->
                                    <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" />
                                    <Label Text="{Binding Description}" FontSize="12" TextColor="Gray" />

                                    <!-- Module Settings -->
                                    <CollectionView ItemsSource="{Binding Settings}" SelectionMode="None">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="*,Auto" Padding="10,5,0,5">
                                                    <VerticalStackLayout Grid.Column="0">
                                                        <Label Text="{Binding DisplayName}" VerticalOptions="Center" />
                                                        <Label Text="{Binding Description}" FontSize="11" TextColor="Gray" />
                                                    </VerticalStackLayout>

                                                    <!-- Boolean Switch -->
                                                    <Switch Grid.Column="1"
                                                            IsToggled="{Binding BoolValue}"
                                                            Toggled="OnModuleSettingToggled"
                                                            IsVisible="{Binding IsBoolean}"
                                                            VerticalOptions="Center" />

                                                    <!-- String Entry -->
                                                    <Entry Grid.Column="1"
                                                           Text="{Binding StringValue}"
                                                           TextChanged="OnModuleSettingTextChanged"
                                                           IsVisible="{Binding IsString}"
                                                           WidthRequest="150"
                                                           VerticalOptions="Center" />

                                                    <!-- Integer Entry -->
                                                    <Entry Grid.Column="1"
                                                           Text="{Binding IntValue}"
                                                           Keyboard="Numeric"
                                                           TextChanged="OnModuleSettingTextChanged"
                                                           IsVisible="{Binding IsInteger}"
                                                           WidthRequest="100"
                                                           VerticalOptions="Center" />

                                                    <!-- Choice Picker -->
                                                    <Picker Grid.Column="1"
                                                            ItemsSource="{Binding Options}"
                                                            SelectedItem="{Binding SelectedOption}"
                                                            SelectedIndexChanged="OnModuleSettingPickerChanged"
                                                            IsVisible="{Binding IsChoice}"
                                                            WidthRequest="150"
                                                            VerticalOptions="Center" />
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                    <BoxView HeightRequest="1" Color="LightGray" Margin="0,10,0,0" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label x:Name="NoModulesLabel"
                           Text="Модули не найдены"
                           FontSize="14"
                           TextColor="Gray"
                           IsVisible="False"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Database Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="База данных" FontSize="18" FontAttributes="Bold" />

                    <Button Text="Очистить кэш сообщений"
                            Clicked="OnClearCacheClicked"
                            BackgroundColor="#FF9800"
                            TextColor="White" />

                    <Button Text="Экспорт сообщений"
                            Clicked="OnExportMessagesClicked"
                            BackgroundColor="#2196F3"
                            TextColor="White" />
                </VerticalStackLayout>
            </Frame>

            <!-- About Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="О приложении" FontSize="18" FontAttributes="Bold" />

                    <Label Text="ICYOU Messenger" FontSize="16" FontAttributes="Bold" />
                    <Label Text="Версия 1.0.0" FontSize="14" />
                    <Label Text=".NET MAUI для Android" FontSize="12" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Logout Button -->
            <Button Text="Выйти"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
