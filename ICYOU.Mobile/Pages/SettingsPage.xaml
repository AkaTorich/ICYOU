<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICYOU.Mobile.Pages.SettingsPage"
             Title="Настройки">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Error/Status Text -->
            <Label x:Name="StatusText"
                   TextColor="Red"
                   IsVisible="False"
                   FontSize="14" />

            <!-- User Info Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Профиль" FontSize="18" FontAttributes="Bold" />

                    <Label x:Name="UsernameLabel" FontSize="14" />
                    <Label x:Name="DisplayNameLabel" FontSize="14" />
                    <Label x:Name="UserIdLabel" FontSize="12" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Notifications Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Уведомления" FontSize="18" FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Сообщения" VerticalOptions="Center" />
                        <Switch x:Name="NotifyMessagesSwitch" Grid.Column="1" Toggled="OnNotifyMessagesToggled" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Звуки" VerticalOptions="Center" />
                        <Switch x:Name="NotifySoundsSwitch" Grid.Column="1" Toggled="OnNotifySoundsToggled" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Друзья" VerticalOptions="Center" />
                        <Switch x:Name="NotifyFriendsSwitch" Grid.Column="1" Toggled="OnNotifyFriendsToggled" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Database Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="База данных" FontSize="18" FontAttributes="Bold" />

                    <Button Text="Очистить кэш сообщений"
                            Clicked="OnClearCacheClicked"
                            BackgroundColor="#FF9800"
                            TextColor="White" />

                    <Button Text="Экспорт сообщений"
                            Clicked="OnExportMessagesClicked"
                            BackgroundColor="#2196F3"
                            TextColor="White" />
                </VerticalStackLayout>
            </Frame>

            <!-- About Section -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="О приложении" FontSize="18" FontAttributes="Bold" />

                    <Label Text="ICYOU Messenger" FontSize="16" FontAttributes="Bold" />
                    <Label Text="Версия 1.0.0" FontSize="14" />
                    <Label Text=".NET MAUI для Android" FontSize="12" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Logout Button -->
            <Button Text="Выйти"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
