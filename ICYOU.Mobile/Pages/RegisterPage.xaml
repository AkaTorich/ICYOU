<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICYOU.Mobile.Pages.RegisterPage"
             Title="Регистрация">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Регистрация"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <Frame BorderColor="LightGray" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Entry x:Name="Username"
                           Placeholder="Логин (только латиница)"
                           TextColor="Black"
                           PlaceholderColor="Gray" />

                    <Entry x:Name="DisplayName"
                           Placeholder="Отображаемое имя"
                           TextColor="Black"
                           PlaceholderColor="Gray" />

                    <Entry x:Name="Password"
                           Placeholder="Пароль (минимум 4 символа)"
                           IsPassword="True"
                           TextColor="Black"
                           PlaceholderColor="Gray" />

                    <Entry x:Name="PasswordConfirm"
                           Placeholder="Подтверждение пароля"
                           IsPassword="True"
                           TextColor="Black"
                           PlaceholderColor="Gray" />

                    <Label x:Name="ErrorText"
                           TextColor="Red"
                           IsVisible="False"
                           FontSize="14" />

                    <Button x:Name="RegisterButton"
                            Text="Зарегистрироваться"
                            Clicked="OnRegisterClicked"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            Margin="0,10,0,0" />

                    <Button Text="Назад к входу"
                            Clicked="OnBackClicked"
                            BackgroundColor="Gray"
                            TextColor="White" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
