<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ICYOU.Mobile"
             xmlns:converters="clr-namespace:ICYOU.Mobile.Converters"
             x:Class="ICYOU.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:FileTypeToIconConverter x:Key="FileTypeToIconConverter" />
            <converters:FileTypeToTextConverter x:Key="FileTypeToTextConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
